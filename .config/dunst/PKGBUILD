# Contributor: Army

pkgname=dunst-git
_pkgname=dunst
pkgver=1.5.0.r87.g814e620
pkgrel=1
pkgdesc="Lightweight and customizable notification daemon"
arch=('i686' 'x86_64' 'armv7h')
url="https://dunst-project.org/"
license=('BSD')
depends=('libxinerama' 'libxss' 'pango' 'libnotify' 'gdk-pixbuf2' 'libxdg-basedir' 'libxrandr')
makedepends=('git' 'perl')
provides=('dunst' 'notification-daemon' 'dunstify')
conflicts=('dunst' 'dunstify')
source=()
md5sums=()

pkgver() {
  cd /home/guesswhatbbq/GitHubRepos/"$_pkgname"
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd "/home/guesswhatbbq/GitHubRepos/${_pkgname}"
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 dunstify
}

package() {
  cd /home/guesswhatbbq/GitHubRepos/"${_pkgname}"
  make DESTDIR=$HOME/.local PREFIX="" install
  install -Dm755 dunstify "$HOME"/".local"/bin/dunstify
  install -Dm755 contrib/dunst_espeak.sh "$HOME"/".local"/bin/dunst_espeak.sh
  install -Dm644 LICENSE "$HOME"/".local"/share/licenses/${pkgname}/LICENSE
  make clean
}
